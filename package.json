{
	"name": "style",
	"description": "Cross-browser style manipulation",
	"version": "0.1.0",
	"author": "Alexander Pope <alexander.pope@nrk.no>",
	"dependencies": {
		"underscore": "1.4.4"
	},
	"devDependencies": {
		"mocha": "*",
		"expect.js": "*",
		"buddy": "*",
		"simple-browser-require": "*"
	},
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git://github.com/yr/style.git"
	},
	"testling": {
		"harness": "mocha-bdd",
		"files": "test/css-test.js",
		"browsers": {
			"ie": [7,8,9,10],
			"firefox": [13,17],
			"chrome": [20,23],
			"safari": [5.1],
			"iphone": [6.0],
			"ipad": [6.0]
		}
	},
	"buddy": {
		"build": {
			"js": {
				"sources": ["."],
				"targets": [{
					"input": "index.js",
					"output": "test/style.js"
				}]
			}
		}
	},
	"scripts": {
		"test": "./node_modules/.bin/buddy build && open test/test-runner.html"
	}
}