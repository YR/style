{
  "name": "style",
  "description": "Cross-browser style manipulation",
  "version": "0.4.0",
  "author": "Alexander Pope <alexander.pope@nrk.no>",
  "dependencies": {
    "lodash.isobject": "~2.3.0",
    "lodash.isarray": "~2.3.0",
    "lodash.isnan": "~2.3.0",
    "lodash.map": "~2.3.0"
  },
  "devDependencies": {
    "mocha": "*",
    "expect.js": "*",
    "buddy": "*",
    "simple-browser-require": "*"
  },
  "main": "index.js",
  "repository": "https://github.com/yr/style.git",
  "license": "MIT",
  "scripts": {
    "test": "buddy build && mocha-phantomjs test/test-runner.html"
  },
  "buddy": {
    "build": {
      "js": {
        "targets": [
          {
            "input": "index.js",
            "output": "test/style.js"
          }
        ]
      }
    },
    "settings": {
      "server": {
        "directory": ".",
        "port": 8000
      }
    }
  }
}
