{
  "name": "style",
  "description": "Cross-browser style manipulation",
  "version": "0.3.1",
  "author": "Alexander Pope <alexander.pope@nrk.no>",
  "dependencies": {
    "lodash.isobject": "~2.3.0",
    "lodash.isarray": "~2.3.0",
    "lodash.isnan": "~2.3.0",
    "lodash.map": "~2.3.0"
  },
  "devDependencies": {
    "mocha": "*",
    "expect.js": "*",
    "buddy": "*",
    "simple-browser-require": "*",
    "blanket": "*"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/yr/style.git"
  },
  "testling": {
    "harness": "mocha-bdd",
    "files": "test/style-test.js",
    "browsers": {
      "ie": [
        9,
        10
      ],
      "firefox": [
        13,
        17,
        20,
        25
      ],
      "chrome": [
        20,
        25,
        30,
        31
      ],
      "opera": [
        17
      ],
      "safari": [
        5.1,
        6
      ],
      "iphone": [
        6
      ],
      "ipad": [
        6
      ],
      "android-browser": [
        4.2
      ]
    }
  },
  "scripts": {
    "test": "buddy build && mocha-phantomjs test/test-runner.html"
  },
  "buddy": {
    "build": {
      "js": {
        "targets": [
          {
            "input": "index.js",
            "output": "test/style.js"
          }
        ]
      }
    },
    "settings": {
      "server": {
        "directory": ".",
        "port": 8000
      }
    }
  }
}
